{
  "manifest_version": 3,

  "name": "Whisperer",
  "version": "1.0",
  "permissions": ["storage"],

  "description": "cmd-f for math.",

  "content_scripts" : [
    {
      "js": ["src/contentscript.js"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "web_accessible_resources": [{
    "resources": [ "src/inject-script.js"],
    "matches": [ "<all_urls>" ]
  }],

  "action": {
    "default_icon": {
      "128": "img/128logo.png"
    },
    "default_title": "Whisperer",
    "default_popup": "src/whisper.html"
  }

}